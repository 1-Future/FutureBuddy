{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/nicegui/elements/tauri-apps/tauri/tooling/cli/schema.json",
  "productName": "FutureBuddy",
  "version": "0.1.0",
  "identifier": "ai.futurebuddy.desktop",
  "build": {
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev -w web",
    "beforeBuildCommand": "npm run build -w web"
  },
  "app": {
    "title": "FutureBuddy",
    "windows": [
      {
        "title": "FutureBuddy â€” Your 24/7 IT Department",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
